include ../mixins/flash-messages

doctype html
html
	head
		meta(name='robots', content='noindex')
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=no')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')

		title= title || 'VRBL'
		link(rel='shortcut icon', href='/favicon.ico?v=2', type='image/x-icon')

		link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700', rel='stylesheet')
		link(href='/styles/normalize.css', rel='stylesheet')
		link(href='/styles/main.css', rel='stylesheet')

		//- This file provides the default styling for the KeystoneJS Content Editor
		if user && user.canAccessKeystone
			link(href='/keystone/styles/content/editor.min.css', rel='stylesheet')

		block css
		block head
	body(class=section ? section : null)

		//- HEADER
		.main-header.clearfix
			nav.navigation.js-navigation
				.container
					ul.nude-list
						each category in menu.categories
							li: a(href='/categories/' + category.slug)= category.name

			.container
				.logo: a(href='/'): img(src='/images/logo.png', width='124', height='53')

				ul.nude-list.social-links.js-social-links.is-visible
					li: a(href='#', target='_blank')
						img(src='/images/facebook-icon.png' alt='See VRBL on Facebook')
					li: a(href='#', target='_blank')
						img(src='/images/twitter-icon.png' alt='See VRBL on Twitter')
					li: a(href='#', target='_blank')
						img(src='/images/instagram-icon.png' alt='See VRBL on Instagram')
					li: a(href='#', target='_blank')
						img(src='/images/youtube-icon.png' alt='See VRBL on Youtube')
					li: a(href='#', target='_blank')
						img(src='/images/spotify-icon.png' alt='See VRBL on Spotify')
					li: a(href='https://soundcloud.com/vrblmedia', target='_blank')
						img(src='/images/soundcloud-icon.png' alt='See VRBL on SoundCloud')

				a.navigation-toggle.js-navigation-toggle(href='#') Topics

		block intro

		+flash-messages(messages)

		block content

		.footer.clearfix: .container
			.logo.footer-logo: a(href='/'): img(src='/images/logo.png', width='124', height='53')
			ul.nude-list.footer-navigation
				each page in pages
					li.menu-item: a(href='/pages/' + page.slug)= page.name

			// p <a href='http://flinzmedia.com' target='_blank'>Website design &amp; development</a> by Flinz Media.

		block js
			script(data-main='/js/app.js' src='/js/require.js')
