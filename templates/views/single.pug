extends ../layouts/default.pug

block content
	section.single.clearfix
		.container
			article
				header.single__header
					h1.title.single__title: span.highlighted--light= audio.name
					h2.single__author= audio.author
					.share
						a.share__facebook(href='https://www.facebook.com/sharer/sharer.php?u=' + data.fullUrl + '&t=' + description, title='Share on Facebook', target='_blank') Share
						a.share__twitter(href='https://twitter.com/intent/tweet?source=' + data.fullUrl + '&text=' + description + ':%20' + data.fullUrl + '&via=vrblmedia', target='_blank' title='Tweet') Tweet
				.single__content!= audio.content
				aside.single__ads
					each block in sidebar
						.single__ads-block
							!= block.content
	.container
		section.audios.clearfix
			h2.title.section-title Next up
			each audio in related
				article.audio
					.audio__image-container
						img.audio__image(src=audio.image.url, width='300', height='300')
					a.audio__link(href='/audios/' + audio.slug)
						.audio__info
							p.audio__author= audio.author
							h3.audio__title: span.highlighted--dark= audio.name
					a.js-play.play-btn(href=audio.soundCloudURL, data-title=audio.name, data-thumbnail=audio.image.url) Listen
			else
				.error-section There's no related content